{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Blogging API",
    "description": "API to create, list and delete blog posts",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "Posts",
      "description": "API posts"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/posts": {
      "post": {
        "tags": [
          "Posts"
        ],
        "summary": "Creates a new blog post",
        "parameters": [
          {
            "name": "post",
            "in": "body",
            "description": "Payload for the creation",
            "schema": {
              "$ref": "#/definitions/Post"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A new blog post is created",
            "schema": {
              "$ref": "#/definitions/CreatedPost"
            }
          },
          "400": {
            "description": "Wrong payload error",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "409": {
            "description": "Data value conflict",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          }                    
        }
      },
      "get": {
        "tags": [
          "Posts"
        ],
        "summary": "Gets all the blog posts",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Posts"
            }
          }
        }
      }
    },
    "/posts/search": {
      "parameters": [
        {
          "name": "text",
          "in": "query",
          "required": true,
          "description": "The text to search for",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "Posts"
        ],
        "summary": "Searches for blog posts",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Posts"
            }
          }
        }
      }
    },    
    "/posts/{postId}": {
      "parameters": [
        {
          "name": "postId",
          "in": "path",
          "required": true,
          "description": "The Id of the blog post",
          "type": "string"
        }
      ],
      "delete": {
        "summary": "Deletes a blog post with the given ID",
        "tags": [
          "Posts"
        ],
        "responses": {
          "200": {
            "description": "The blog post will be deleted if it is found",
            "schema": {
              "$ref": "#/definitions/DeleteResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Post": {
      "required": [
        "title",
        "content",
        "author",
        "status"
      ],
      "properties": {
        "title": {
          "type": "string",
          "description": "The blog post title, it should be unique",
          "uniqueItems": true
        },
        "content": {
          "type": "string",
          "description": "The blog post content"
        },
        "author": {
          "type": "string",
          "description": "The reference to the author"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "private", "public"],
          "description": "The blog post status, it should be one of: draft, private, public"
        }
      }
    },
    "Posts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CreatedPost"
      }
    },
    "CreatedPost": {
      "required": [
        "_id",
        "title",
        "content",
        "author",
        "status",
        "createdAt",
        "updatedAt"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true,
          "description": "The blog post unique identifier"
        },
        "title": {
          "type": "string",
          "uniqueItems": true,
          "description": "The blog post title, it is unique"
        },
        "content": {
          "type": "string",
          "description": "The blog post content"
        },
        "author": {
          "type": "string",
          "description": "The reference to the author"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "private", "public"],
          "description": "The blog post status, it is one of: draft, private, public"
        },        
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The blog post timestamp in which it was created"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The blog post timestamp in which it was updated"
        },
        "__v": {
          "type": "number",
          "description": "Document internal versioning"
        }                        
      }      
    },
    "DeleteResponse": {
      "required": [
        "n",
        "ok",
        "deletedCount"
      ],
      "properties": {
        "n": {
          "type": "string",
          "description": "Indicates how many were found"
        },
        "ok": {
          "type": "string",
          "description": "Indicates if the command ran ok"
        },
        "deletedCount": {
          "type": "string",
          "description": "Indicates how many were deleted"
        }                        
      }      
    },
    "Message": {
      "required": [
        "message"
      ],
      "properties": {
        "message": {
          "type": "string",
          "description": "Indicates what has happened"
        }                        
      }      
    }        
  }
}